<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTitles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/llClickableRaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAssetKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1sdp"
            android:gravity="left|center"
            android:text="Title 2"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="center"
            android:layout_weight="1"/>

      <!--  <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />-->

        <ImageView
            android:id="@+id/imgvScan"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/setting_blue"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvAssetValueEdit"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/bg_edittext_pole_data"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:singleLine="false"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvAssetValueDisplay"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:singleLine="false"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:text="123456"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/edtAssetValueEditText"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/bg_edittext_pole_data"
            android:gravity="center"
            android:hint=""
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"
            android:cursorVisible="true"
            />

    </LinearLayout>


</LinearLayout>